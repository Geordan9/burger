<h1>Burgers</h1>

<hr>

<div class="row">
  <div class="col-md-6">
    <h2>Available Burgers:</h2>    

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block available=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h2>Burgers that have been devoured:</h2>    

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block available=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


<hr>

<h2>Add a new Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
